<header class="page-header">
  <div class="page-header__title-group">
    <h1 class="page-header__title"><%= @user.email %></h1>
    <%= if @user.is_admin do %>
      <p class="page-header__subtitle">Admin</p>
    <% end %>
  </div>
  <div class="page-header__actions">
    <%= link "Edit Profile", to: Routes.user_path(@conn, :edit, @user) %><br>
  </div>
</header>

<%= if @user.is_admin do %>
<%= link "All users", to: Routes.user_path(@conn, :index) %>
<% end %>
